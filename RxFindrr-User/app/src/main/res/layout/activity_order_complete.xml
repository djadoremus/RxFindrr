<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderCompleteActivity">
    <TextView
        android:layout_alignParentTop="true"
        android:id="@+id/id_tv_orderid"
        android:text="@string/orderid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toRightOf="@id/id_tv_orderid"
        android:layout_alignParentTop="true"
        android:id="@+id/id_tv_order_val"
        android:text="@string/orderid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/id_lv_prescribedlist"
        android:layout_below="@id/id_tv_orderid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
</RelativeLayout>